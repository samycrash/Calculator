                on_release: root.btn_4()
            Button:
                id: 5_btn
                text: '5'
                on_release: root.btn_5()
            Button:
                id: 6_btn
                text: '6'
                on_release: root.btn_6()
            Button:
                id: minus_btn
                text: '-'
            Button:
                id: 1_btn
                text: '1'
                on_release: root.btn_1()
            Button:
                id: 2_btn
                text: '2'
                on_release: root.btn_2()
            Button:
                id: 3_btn
                text: '3'
                on_release: root.btn_3()
