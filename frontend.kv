                on_release: root.btn_backSpace()
            Button:
                id: symbolic_btn
                text: '+/-'
                on_release: root.btn_symbolic()
            Button:
                id: dividing_btn
                text: '/'
            Button:
                id: 7_btn
                text: '7'
                on_release: root.btn_7()
            Button:
